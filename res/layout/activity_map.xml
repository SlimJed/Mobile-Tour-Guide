<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity" >

    
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <Button 
        android:id="@+id/closestService"
        android:layout_height="60dp"
        android:layout_width="150dp"
        android:text="Show closest building"
        android:textColor="#000000"
        android:background="#F8FCE6"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="7dp"/>
    
     <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        >
        <AutoCompleteTextView 
        android:id="@+id/searcheditbox"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:textAlignment="gravity"
        android:hint="Search Places..."
        android:background="@drawable/roundup"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:textColor="#2e2e2e"
        />
        <Button 
            android:id="@+id/searchbutton"
            android:layout_height="38dp"
            android:layout_width="50dp"
            android:layout_marginLeft="295dp"
            android:layout_alignBaseline="@+id/searcheditbox"
            android:gravity="center"
            android:background="#3E82F0"
            android:text="GO"
            android:textColor="#fff"/>
    </RelativeLayout>

</FrameLayout>
